<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.CategoryFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Category"
        android:textSize="20dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/textcatagory"/>

    <HorizontalScrollView
        android:id="@+id/horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textcatagory"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="2dp">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/textcatagory"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/R1"
                android:layout_width="70dp"
                android:layout_height="70dp">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="2.5dp"
                    android:background="@drawable/cat1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="45dp"
                    android:text="Beach"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btnBeach"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="#00000000" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/R2"
                android:layout_marginStart="15dp"
                android:layout_width="70dp"
                android:layout_height="70dp">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="2.5dp"
                    android:background="@drawable/cat2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="45dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="Camps" />
                <Button
                    android:id="@+id/btnCamps"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="#00000000" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/R3"
                android:layout_marginStart="15dp"
                android:layout_width="70dp"
                android:layout_height="70dp">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="2.5dp"
                    android:background="@drawable/cat3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="46dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="Forest" />
                <Button
                    android:id="@+id/btnForest"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="#00000000" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/R4"
                android:layout_marginStart="15dp"
                android:layout_width="70dp"
                android:layout_height="70dp">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="2.5dp"
                    android:background="@drawable/cat4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="45dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="Desert" />
                <Button
                    android:id="@+id/btnDesert"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="#00000000" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/R5"
                android:layout_marginStart="15dp"
                android:layout_width="70dp"
                android:layout_height="70dp">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="2.5dp"
                    android:background="@drawable/cat5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="45dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="Mountain" />
                <Button
                    android:id="@+id/btnMontain"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="#00000000" />
            </RelativeLayout>


        </LinearLayout>
    </HorizontalScrollView>

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/horizontal"
        android:layout_marginTop="2dp"
        android:background="@drawable/seach_background2"
        android:drawableLeft="@drawable/search_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Explore"
        android:layout_marginLeft="5dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:id="@+id/textexplor"
        android:layout_below="@id/searchView"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textexplor"
        android:layout_marginTop="2dp" />
    <RelativeLayout
        android:layout_below="@id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="70dp" />
</RelativeLayout>

